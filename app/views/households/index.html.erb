<h1>Listing households</h1>

<table>
  <tr>
    <th>Household bill</th>
    <th>Household member</th>
    <th>Household regular bill</th>
    <th>Address entry</th>
    <th>Household name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @households.each do |household| %>
  <tr>
    <td><%= household.household_bill_id %></td>
    <td><%= household.household_member_id %></td>
    <td><%= household.household_regular_bill_id %></td>
    <td><%= household.address_entry_id %></td>
    <td><%= household.household_name %></td>
    <td><%= link_to 'Show', household %></td>
    <td><%= link_to 'Edit', edit_household_path(household) %></td>
    <td><%= link_to 'Destroy', household, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

